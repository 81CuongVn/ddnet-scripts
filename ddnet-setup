ssh root@37.235.52.151

Debian:
apt-get update
apt-get upgrade
apt-get install bsdutils tree zsh vim htop git g++ libboost-dev python-msgpack python-requests python-dnspython python-mysqldb sshfs tcpdump gdb pkg-config ntpdate ntp mailutils msmtp msmtp-mta libssl-dev libmariadbclient-dev libmysqlcppconn-dev cmake make unattended-upgrades apt-listchanges iptables-persistent libwebsockets-dev libcurl4-openssl-dev python3 python3-dnslib python3-cachetools dnsmasq strace dnsutils sqlite3 libsqlite3-dev mariadb-client rsync libreadline-dev binutils-dev libpcap-dev libnl-genl-3-dev dh-autoreconf
Install libmysqlcppconn-dev & libmysqlcppconn7v5 from testing: https://serverfault.com/questions/22414/how-can-i-run-debian-stable-but-install-some-packages-from-testing (https://github.com/ddnet/ddnet/issues/2558)
apt-get -t testing install libmysqlcppconn-dev libmysqlcppconn7v5

dpkg-reconfigure tzdata
dpkg-reconfigure -plow unattended-upgrades
vim /etc/hostname
invoke-rc.d hostname.sh start

vim /etc/passwd /etc/group
Create teeworlds user and set zsh
mkdir /home/teeworlds
chown teeworlds:teeworlds !$
passwd teeworlds

vim /etc/ssh/sshd_config

Create tars on other servers and scp them over:
tar --exclude='teehistorian' -zcf servers.tar.gz servers

tar xvf servers.tar.gz
tar xvf src.tar.gz
tar xvf dnsbl.tar.gz

With mysql: mysql_tzinfo_to_sql /usr/share/zoneinfo | mysql -p mysql

From root @ other server:
scp -r /etc/zsh /etc/vim* /etc/mysql /etc/ssmtp /etc/dnsmasq.d /etc/dnsmasq.conf /etc/resolv.dnsmasq.conf /etc/resolv.conf 37.235.52.151:/etc
scp -r /etc/systemd/system/dnsbl-iphub.service 37.235.52.151:/etc/systemd/system
scp -r weekly .config .vim* .ssh* .z* 37.235.52.151:

systemctl enable dnsbl-iphub
systemctl start dnsbl-iphub
systemctl restart dnsmasq

From teeworlds @ other server:
scp -r .config .vim* .ssh* .z* 37.235.52.151:

vim /etc/ssmtp/ssmtp.conf # hostname
vim /etc/hosts # ddnet.tw

cd src
./build.sh
cd ..

cd servers
vim mysql.cfg scripts/mysql.py
vim types/*/flexname.cfg

crontab -e
vim /etc/security/limits.conf

vim /usr/local/bin/{ni,rni}
chmod +x !$

git config --global user.email "you@example.com"
git config --global user.name "Your Name"

vim ~/run-all.sh /etc/init.d/teeworlds-servers
chmod +x ~/run-all.sh /etc/init.d/teeworlds-servers
update-rc.d teeworlds-servers defaults enable

# Hack for getting approximate time for hosters that totally block NTP:
date -s "$(wget -qSO- --max-redirect=0 google.com 2>&1 | grep Date: | cut -d' ' -f5-8)Z"

vim ~/servers/serverstatus-client.py
add /etc/network/if-up.d/iptables
scp /etc/iptables.up.rules from another server
iptables-restore < /etc/iptables.up.rules

On ddnet.tw:
vim ServerStatus/server/config.json
systemctl restart sergate
cd servers
vim ddrace.cfg # sv_sql_valid_servernames
vim scripts/status.py
vim serverlist.json
vim all-locations
./git-update-files-only.sh

On mysql servers:
iptables -I INPUT -p tcp --dport 3306 -s $IP -j ACCEPT
iptables-save > /etc/iptables.up.rules
mysql # grant for teeworlds, blocker, zcatch users

